data_collector["token"]           = "<%= node["chef-marketplace"]["automate"]["data_collector"]["token"] %>"
delivery_fqdn                     "<%= node["chef-marketplace"]["api_fqdn"] %>"
delivery["chef_private_key"]      = "/etc/delivery/delivery.pem"
delivery["chef_server"]           = "https://localhost:8443/organizations/delivery"
delivery["chef_server_proxy"]     = true
delivery["chef_username"]         = "delivery"
delivery["primary"]               = true
<% if node["chef-marketplace"]["platform"] == "aws" && node["chef-marketplace"]["license"]["type"] == "flexible" -%>
delivery["marketplace_licensing"] = true
<% end -%>
elasticsearch["enable_auth"]      = true
insights["enable"]                = true
insights["enable_auth"]           = true
kibana["enable_auth"]             = true
nginx["expired_trial_contact"]    = "<%= node["chef-marketplace"]["sales"]["email"] %>"
postgresql["listen_address"]      = "0.0.0.0"
postgresql["superuser_enable"]    = true
postgresql["superuser_username"]  = "chef-pgsql"
postgresql["superuser_password"]  = "<%= node["chef-marketplace"]["automate"]["postgresql"]["superuser_password"] %>"
reaper["enable"]                  = true
reaper["mode"]                    = "delete"
