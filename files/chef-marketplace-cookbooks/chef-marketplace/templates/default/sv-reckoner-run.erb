#!/bin/sh
export HOME=/var/opt/chef-marketplace/reckoner
export PATH=/opt/chef-marketplace/embedded/bin:${PATH}
export RECKONER_ENV=production
exec 2>&1
cd /opt/chef-marketplace/embedded/service/reckoner
exec chpst \
  -P \
  -U <%= node['chef-marketplace']['runit']['user']['username'] %> \
  -u <%= node['chef-marketplace']['runit']['user']['username'] %> \
  /opt/chef-marketplace/bin/reckoner "<%= node["chef-marketplace"]["reckoner"]["config_file"] %>"
